<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xunluyaoyao.web.mapper.UserMapper">
    <select id="list" resultType="User">
        select * from users where name = #{name} and password = #{password}  order by id desc
    </select>
    <select id="getByName" parameterType="String" resultType="User">
        select * from users where name = #{name}
    </select>
    <select id="listName" resultType="User">
        select * from users where name = #{name}
    </select>
    <insert id="add" parameterType="User" useGeneratedKeys="true" keyProperty="id">
        insert into users (name, password) values(#{name}, #{password})
    </insert>
</mapper>